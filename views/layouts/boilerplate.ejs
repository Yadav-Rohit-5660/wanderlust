<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (success && success.length > 0) { %>
  <script type="">
    var successMessage = <%- JSON.stringify(success[0]) %>;
    Swal.fire({
      icon: 'success',
      title: 'Booking Confirmed',
      text: successMessage
    });
  </script>
<% } %>

<% if (error && error.length > 0) { %>
  <script type="">
    var errorMessage = <%- JSON.stringify(error[0]) %>;
    Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: errorMessage
    });
  </script>
<% } %>

    

